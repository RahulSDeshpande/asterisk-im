<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.jivesoftware.phone">

    <class name="PhoneDevice" table="phoneDevice" >

        <id name="id" column="deviceID" >
            <generator class="org.jivesoftware.phone.database.JiveIDGenerator"/>
        </id>

        <property name="device" not-null="true" />

        <property name="extension" not-null="true"/>

        <property name="callerId" />

        <property name="primary" column="isPrimary" type="boolean" not-null="true"/>

    </class>


</hibernate-mapping>