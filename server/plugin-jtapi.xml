<?xml version="1.0" encoding="UTF-8"?>

<plugin>
    <class>org.jivesoftware.phone.jtapi.JtapiPlugin</class>
    <name>Asterisk-IM</name>
    <description>Integration for Asterisk-JTAPI and Wildfire.</description>
    <author>Andrew Wright, Jens Wilke</author>
    <version>1.2CVS</version>
    <minServerVersion>2.6.0</minServerVersion>

    <adminconsole>
        <tab id="tab-phone" name="Asterisk-IM" url="phone-settings.jsp"
             description="Click to manage Asterisk integration settings">

            <sidebar id="siderbar-phone" name="Asterisk-IM">
                <item id="item-phone-settings" name="General Settings" description="phone admin tool"
                      url="phone-settings.jsp"/>
                <item id="item-phone-users" name="Phone Mappings" description="Mapping between usernames and phones"
                      url="phone-users.jsp"/>
            </sidebar>

        </tab>
    </adminconsole>

</plugin>
